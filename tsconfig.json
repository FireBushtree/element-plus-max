{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "useDefineForClassFields": false,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@element-plus-max/*": [
        "packages/*"
      ]
    },
    "resolveJsonModule": true,
    "types": ["node"],
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "newLine": "LF",
    "outDir": "temp",
    "removeComments": false,
    "sourceMap": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "packages/*/src"
  ]
}
